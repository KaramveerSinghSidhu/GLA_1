<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Student Database</title>

</head>
<body class="bg-light">

    <div class="row">
        <h1 class="col m-5 text-center">Student Database</h1>
    </div>
    <div class="row pt-5">
        <div class="col text-center"></div>
        <div class="col text-center"></div>
        <div class="col text-center"></div>
        <div class="col text-center"><a class="btn btn-primary" href="/add/students"><h5>Add Student</h5></a></div>
        <div class="col text-center"><a class="btn btn-danger" href="/delete/students"><h5>Delete Student</h5></a></div>
        <div class="col text-center"></div>
        <div class="col text-center"></div>
        <div class="col text-center"></div>
    </div>

    
    <div class="container p-5">
        <h3 class="col m-5 text-center">Students</h3>

        <% if(hasStudnets == true) { %>
            <div class="row ps-5 pt-3 pe-5 pb-1 text-center bg-secondary">
                <h6 class="col">ID</h6>
                <h6 class="col">Name</h6>
                <h6 class="col">Number</h6>
                <h6 class="col">Age</h6>
            </div>

            <% students.forEach(student => { %>
                <div class="row ps-5 pt-1 pe-5 pb-1 text-center bg-muted">
                    <h6 class="col"><%= student.id %></h6>
                    <h6 class="col"><%= student.name %></h6>
                    <h6 class="col"><%= student.number %></h6>
                    <h6 class="col"><%= student.age %></h6>
                </div>

            <% }) %>

        <% } else { %>
            <h6 class="col text-center">No Students in Database</h6>
        <% } %>
    </div>


</body>
</html>