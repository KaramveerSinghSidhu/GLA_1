<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Student Database</title>

</head>
<body class="bg-light">

    <div class="row">
        <h1 class="col m-5 text-center">Student Database</h1>
    </div>
    <div class="container mt-5 mb-5">
        <form class="row m-5" action="/remove/students" method="POST">
            <div class="col"></div>
                <div class="col bg-light">
                <h3 class=" col text-center p-4">Delete Student</h3>
                <div class="row">
                <div class="col text-center"></div>
                <div class="col text-center"></div>
                <select class="col new-form text-center" name="id" id="id" type=number>
                    <% students.forEach(student => { %>
                        <% if(student.id != undefined) { %>
                    <option><%= student.id %></option>
                    <% }}) %>
                </select>
                <div class="col text-center"></div>
                <div class="col text-center"></div>
            </div>
                <div class="row m-1 mt-5 mb-3"><button class="btn btn-danger" type="submit">Delete Student</button></div>
                <div class="row m-1"><a class="btn btn-secondary" href="/">Cancel</a></div>
                </div>
                <div class="col"></div>
        </form>
    </div>


</body>
</html>